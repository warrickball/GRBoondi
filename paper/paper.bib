@article{Clough2015sqa,
	title        = {GRChombo: Numerical relativity with adaptive mesh refinement},
	author       = {Katy Clough and Pau Figueras and Hal Finkel and Markus Kunesch and Eugene A Lim and Saran Tunyasuvunakool},
	year         = 2015,
	month        = dec,
	journal      = {Classical and Quantum Gravity},
